{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/file-protection.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/skill-loader.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/mcp-loader.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/language-loader.py",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(cargo:*)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Task(*)",
      "Skill(*)",
      "Bash(chmod:*)",
      "Bash(python3:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Write(.env)",
      "Write(.env.*)",
      "Read(secrets/**)",
      "Edit(secrets/**)",
      "Read(credentials/**)",
      "Edit(credentials/**)",
      "Read(*.pem)",
      "Read(*.key)",
      "Edit(*.pem)",
      "Edit(*.key)"
    ]
  },
  "responseLanguage": "en"
}
